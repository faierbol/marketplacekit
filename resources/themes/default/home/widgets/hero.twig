<div style=" max-height: 380px; direction:ltr ">

    <div class="row   mt-5 mb-0 text-white" >
        <div class="col-sm-6 offset-sm-3">
		  {% if current_locale() != 'ar' %}
			<div class="text-center mb-4"> <img src="{{ setting('logo', '../../logo.png') }}" class="hero-img" title=""/></div>
           {% else %}
			<div class="text-center mb-4"> <img src="logo-ar.svg" class="hero-img" title=""/></div>

		   {% endif %}
		    <h2 class="text-{{widget.alignment}} pb-2">{{widget.title}}<br/>{{__("from our")}} {{ count_all }} {{__("offers")}} {{ __('en')}} {{ app.session.get('country')}}  </h2>
            <p class="text-{{widget.alignment}} pb-2 text-white" style="font-size:14px">{{widget.metadata}}</p>
        </div>
    </div>

	<div class="row mx-auto mb-5 mt-0" >
        <div class="col-sm-8 offset-sm-2 mt-3">

		<form action="{{route(setting('marketplace_index'))}}" method="GET" class=" mb-5">

			<div class="input-group mb-5 shadow-lg">
				<div class="input-group-prepend">
					<button class="btn btn-default bg-white border border-right-0 btn-lg" type="button"><i class="fa fa-search" aria-hidden="true"></i></button>
				</div>
				<input type="text" name="q" class="border border-left-0 form-control form-control-lg" placeholder="{{ __("Maintenance, Anglais, Informatique...") }}" aria-label="">
				<div class="input-group-append">
					<button class="btn btn-primary btn-lg" type="submit">{{ __("Rechercher") }}</button>
			</div>
			</div>

		</form>

		</div>
	</div>

</div>